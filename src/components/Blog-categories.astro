---
import { getCategories } from "../services/blogwp";

interface Category {
  id: number;
  name: string;
  count: number;
  slug: string;
}

let { cat } = Astro.props as { cat: Category[] };
cat = await getCategories();
---

<section id="categories-1" class="widget widget_categories">
  <h2 class="widget-title">Categor√≠as</h2>
  <ul>
    {
      cat.map((c) => (
        <li class="cat-item cat-item-16">
          <a href={`/blog/categoria/${c.slug}`}>{c.name}</a>
          {c.count}
        </li>
      ))
    }
  </ul>
</section>
